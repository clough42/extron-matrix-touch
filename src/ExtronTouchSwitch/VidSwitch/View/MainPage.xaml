<Page
    x:Class="VidSwitch.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VidSwitch"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" RequestedTheme="Dark" Width="800" Height="480">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid x:Name="ContentRoot" Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <CommandBar Grid.Row="0">
                <CommandBar.Content>
                    <TextBlock Text="Matrix video switch" Margin="8,8,0,0" FontSize="20"/>
                </CommandBar.Content>

                <AppBarButton x:Name="overridesButton" Icon="SetLockScreen" Label="Overrides"/>

                <CommandBar.SecondaryCommands>
                    <AppBarButton x:Name="inputsButton" Icon="Video" Label="Inputs"/>
                    <AppBarButton x:Name="outputsButton" Icon="Slideshow" Label="Outputs"/>
                    <AppBarButton x:Name="presetsButton" Icon="Setting" Label="Presets"/>
                </CommandBar.SecondaryCommands>

            </CommandBar>

            <StackPanel Orientation="Horizontal" Grid.Row="1">
                <!-- Presets -->
                <StackPanel Orientation="Vertical" DataContext="{Binding PresetChoice}">
                    <TextBlock Text="{Binding Name}" Margin="24,8,0,0" FontSize="24" Foreground="{ThemeResource SystemControlForegroundAccentBrush}"/>
                    <StackPanel Orientation="Horizontal" Margin="20,0,20,0">

                        <StackPanel Orientation="Vertical" Width="240">
                            <ToggleButton x:Name="presetButton0" Margin="4" HorizontalAlignment="Stretch">
                                <TextBlock Text="{Binding Choices[0]}" FontSize="20"/>
                            </ToggleButton>
                            <ToggleButton x:Name="presetButton1" Margin="4" HorizontalAlignment="Stretch">
                                <TextBlock Text="{Binding Choices[1]}" FontSize="20"/>
                            </ToggleButton>
                            <ToggleButton x:Name="presetButton2" Margin="4" HorizontalAlignment="Stretch">
                                <TextBlock Text="{Binding Choices[2]}" FontSize="20"/>
                            </ToggleButton>
                            <ToggleButton x:Name="presetButton3" Margin="4" HorizontalAlignment="Stretch">
                                <TextBlock Text="{Binding Choices[3]}" FontSize="20"/>
                            </ToggleButton>
                            <ToggleButton x:Name="presetButton4" Margin="4" HorizontalAlignment="Stretch">
                                <TextBlock Text="{Binding Choices[4]}" FontSize="20"/>
                            </ToggleButton>
                            <ToggleButton x:Name="presetButton5" Margin="4" HorizontalAlignment="Stretch">
                                <TextBlock Text="{Binding Choices[5]}" FontSize="20"/>
                            </ToggleButton>
                            <ToggleButton x:Name="presetButton6" Margin="4" HorizontalAlignment="Stretch">
                                <TextBlock Text="{Binding Choices[6]}" FontSize="20"/>
                            </ToggleButton>
                            <ToggleButton x:Name="presetButton7" Margin="4" HorizontalAlignment="Stretch">
                                <TextBlock Text="{Binding Choices[7]}" FontSize="20"/>
                            </ToggleButton>
                        </StackPanel>
                        <StackPanel Orientation="Vertical"  Width="240">
                            <ToggleButton x:Name="presetButton8" Margin="4" HorizontalAlignment="Stretch">
                                <TextBlock Text="{Binding Choices[8]}" FontSize="20"/>
                            </ToggleButton>
                            <ToggleButton x:Name="presetButton9" Margin="4" HorizontalAlignment="Stretch">
                                <TextBlock Text="{Binding Choices[9]}" FontSize="20"/>
                            </ToggleButton>
                            <ToggleButton x:Name="presetButton10" Margin="4" HorizontalAlignment="Stretch">
                                <TextBlock Text="{Binding Choices[10]}" FontSize="20"/>
                            </ToggleButton>
                            <ToggleButton x:Name="presetButton11" Margin="4" HorizontalAlignment="Stretch">
                                <TextBlock Text="{Binding Choices[11]}" FontSize="20"/>
                            </ToggleButton>
                            <ToggleButton x:Name="presetButton12" Margin="4" HorizontalAlignment="Stretch">
                                <TextBlock Text="{Binding Choices[12]}" FontSize="20"/>
                            </ToggleButton>
                            <ToggleButton x:Name="presetButton13" Margin="4" HorizontalAlignment="Stretch" Visibility="Collapsed">
                                <TextBlock Text="{Binding Choices[13]}" FontSize="20"/>
                            </ToggleButton>
                            <ToggleButton x:Name="presetButton14" Margin="4" HorizontalAlignment="Stretch" Visibility="Collapsed">
                                <TextBlock Text="{Binding Choices[14]}" FontSize="20"/>
                            </ToggleButton>
                            <ToggleButton x:Name="presetButton15" Margin="4" HorizontalAlignment="Stretch" Visibility="Collapsed">
                                <TextBlock Text="{Binding Choices[15]}" FontSize="20"/>
                            </ToggleButton>
                        </StackPanel>
                    </StackPanel>

                </StackPanel>

                <!-- Preview -->
                <StackPanel Orientation="Vertical" DataContext="{Binding PreviewChoice}">
                    <TextBlock Text="{Binding Name}" Margin="24,8,0,0" FontSize="24" Foreground="{ThemeResource SystemControlForegroundAccentBrush}"/>
                    <StackPanel Orientation="Horizontal" Margin="20,0,20,0" >

                        <StackPanel Orientation="Vertical"  Width="240">
                            <ToggleButton x:Name="previewButton0" Margin="4" HorizontalAlignment="Stretch">
                                <TextBlock Text="{Binding Choices[0]}" FontSize="20"/>
                            </ToggleButton>
                            <ToggleButton x:Name="previewButton1" Margin="4" HorizontalAlignment="Stretch">
                                <TextBlock Text="{Binding Choices[1]}" FontSize="20"/>
                            </ToggleButton>
                            <ToggleButton x:Name="previewButton2" Margin="4" HorizontalAlignment="Stretch">
                                <TextBlock Text="{Binding Choices[2]}" FontSize="20"/>
                            </ToggleButton>
                            <ToggleButton x:Name="previewButton3" Margin="4" HorizontalAlignment="Stretch">
                                <TextBlock Text="{Binding Choices[3]}" FontSize="20"/>
                            </ToggleButton>
                            <ToggleButton x:Name="previewButton4" Margin="4" HorizontalAlignment="Stretch">
                                <TextBlock Text="{Binding Choices[4]}" FontSize="20"/>
                            </ToggleButton>
                            <ToggleButton x:Name="previewButton5" Margin="4" HorizontalAlignment="Stretch">
                                <TextBlock Text="{Binding Choices[5]}" FontSize="20"/>
                            </ToggleButton>
                            <ToggleButton x:Name="previewButton6" Margin="4" HorizontalAlignment="Stretch">
                                <TextBlock Text="{Binding Choices[6]}" FontSize="20" />
                            </ToggleButton>
                            <ToggleButton x:Name="previewButton7" Margin="4" HorizontalAlignment="Stretch">
                                <TextBlock Text="{Binding Choices[7]}" FontSize="20"/>
                            </ToggleButton>
                        </StackPanel>

                    </StackPanel>

                </StackPanel>

            </StackPanel>


        </Grid>

    </Grid>

</Page>
