<ContentDialog
    x:Class="VidSwitch.View.OverridesDlg"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VidSwitch.View"
    xmlns:conv="using:VidSwitch.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Overrides"
    PrimaryButtonText="Save"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_SaveButtonClick"
    RequestedTheme="Dark">

    <ContentDialog.Resources>
        <conv:AddZeroNoneConverter x:Key="AddZeroNone"/>
    </ContentDialog.Resources>

    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock TextWrapping="WrapWholeWords" Margin="8">Select overrides to lock screens to individual inputs.</TextBlock>
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="300" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Margin="0,0,8,0" Text="{Binding Outputs[0]}"/>
                <TextBlock Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" Margin="0,0,8,0" Text="{Binding Outputs[1]}"/>
                <TextBlock Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" Margin="0,0,8,0" Text="{Binding Outputs[2]}"/>
                <TextBlock Grid.Column="0" Grid.Row="3" VerticalAlignment="Center" Margin="0,0,8,0" Text="{Binding Outputs[3]}"/>
                <TextBlock Grid.Column="0" Grid.Row="4" VerticalAlignment="Center" Margin="0,0,8,0" Text="{Binding Outputs[4]}"/>
                <TextBlock Grid.Column="0" Grid.Row="5" VerticalAlignment="Center" Margin="0,0,8,0" Text="{Binding Outputs[5]}"/>
                <TextBlock Grid.Column="0" Grid.Row="6" VerticalAlignment="Center" Margin="0,0,8,0" Text="{Binding Outputs[6]}"/>

                <ComboBox x:Name="overrideBox0" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" Margin="0" 
                          ItemsSource="{Binding Inputs, Converter={StaticResource AddZeroNone}}" SelectedIndex="{Binding Overrides[0]}"/>
                <ComboBox x:Name="overrideBox1" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" Margin="0" 
                          ItemsSource="{Binding Inputs, Converter={StaticResource AddZeroNone}}" SelectedIndex="{Binding Overrides[1]}"/>
                <ComboBox x:Name="overrideBox2" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch" Margin="0" 
                          ItemsSource="{Binding Inputs, Converter={StaticResource AddZeroNone}}" SelectedIndex="{Binding Overrides[2]}"/>
                <ComboBox x:Name="overrideBox3" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Stretch" Margin="0" 
                          ItemsSource="{Binding Inputs, Converter={StaticResource AddZeroNone}}" SelectedIndex="{Binding Overrides[3]}"/>
                <ComboBox x:Name="overrideBox4" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Stretch" Margin="0" 
                          ItemsSource="{Binding Inputs, Converter={StaticResource AddZeroNone}}" SelectedIndex="{Binding Overrides[4]}"/>
                <ComboBox x:Name="overrideBox5" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Stretch" Margin="0" 
                          ItemsSource="{Binding Inputs, Converter={StaticResource AddZeroNone}}" SelectedIndex="{Binding Overrides[5]}"/>
                <ComboBox x:Name="overrideBox6" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Stretch" Margin="0" 
                          ItemsSource="{Binding Inputs, Converter={StaticResource AddZeroNone}}" SelectedIndex="{Binding Overrides[6]}"/>

                <Button Name="clearAllButton" Grid.Row="7" Grid.Column="2" HorizontalAlignment="Stretch" Click="clearAllButton_Click"
                        Padding="32,4,32,4" Margin="0,8,0,8">
                    Clear All Overrides
                </Button>
            </Grid>

        </StackPanel>
    </Grid>
</ContentDialog>
